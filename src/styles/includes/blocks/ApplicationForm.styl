.ApplicationForm
  background url('../img/application_form_bg.webp') center bottom / 100% auto no-repeat

  @media $mdPlus
    display grid
    grid-template-columns 55% 1fr
    max-width 930px
    min-height 547px
    background $light
  
  &_textWrapper
    @media $mdPlus
      display grid
      grid-template-columns 100%
      align-content center
      background url('../img/application_form_bg_desktop.webp') right 0 / cover no-repeat

  &_textWrapperInner
    padding 38px 20px 16px
    background $info
    color $light
    font-family $textbook-new-web
    text-align center

    @media $mdPlus
      margin-right 22px
      padding 23px 20px
      background url('../img/application_form_text_wrapper_bg.webp') right 0 / cover no-repeat
  
  &_title
    font-weight 700
    font-size 30px
    line-height 1.2333
  
  &_description
    font-size 17px
    line-height 1.2353

    & > p
      &:last-child
        margin-bottom 0
  
  &_btnWrapper
    display grid
    place-content end center
    min-height 260px
    padding 45px 70px
  
  &_fieldsWrapper
    padding 80px 19px 80px 21px
    background $light
    font-family $textbook-new-web
    transition all .25s

    @media $mdMinus
      position fixed
      z-index 100
      top 0
      right 0
      bottom 0
      left 0
      opacity 0
      visibility hidden

    &-visible
      opacity 1
      visibility visible
  
  &_closeBtn
    position absolute
    top 5px
    right 4px
    width 40px
    height 40px
    padding 0
    border none
    outline none
    background url("data:image/svg+xml,%3Csvg width='14' height='15' viewBox='0 0 14 15' fill='none' xmlns='http://www.w3.org/2000/svg'%3E%3Cpath stroke='%23AEAEAE' d='m13.634 14.34-13-14M13.366.34l-13 14'/%3E%3C/svg%3E") center center no-repeat
  
  &_formTitle,
  &_formDescription
    color $info
    text-align center
  
  &_formTitle
    margin-bottom 10px
    font-weight 700
    font-size 32px
    line-height 1.25
  
  &_formDescription
    margin-bottom 32px
    font-size 17px
    line-height 1.2353

    & > p
      &:last-child
        margin-bottom 0
  
  &_fields
    margin-bottom 44px
  
  &_field
    position relative
    margin-bottom 28px

    &:last-child
      margin-bottom 0
  
  &_formText
    width 100%
    height 27px
    padding 0
    border none
    outline none
    border-bottom 2px solid lighten($secondary, 40%)
    font-size 13px
    line-height 1.23077

    &:focus ~ .ApplicationForm_label,
    &:not(:placeholder-shown) ~ .ApplicationForm_label
      top -12px
      font-size 11px
  
  &_label
    position absolute
    top 6px
    left 0
    color lighten($secondary, 40%)
    font-size 13px
    line-height 1.23077
    transition all .25s
    cursor text
  
  &_actions
    margin-bottom 27px
    text-align center
  
  &_note
    text-align center
    font-size 12px
    line-height 1.25
    
    & > p
      &:last-child
        margin-bottom 0

    a
      text-decoration none
      color $info